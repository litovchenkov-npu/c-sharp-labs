<Window x:Class="Task10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task10"
        mc:Ignorable="d"
        Title="Circle drawing" Height="480" Width="640">
    <Grid>
        <TextBox Name="RadiusInput" Width="150" Height="24" VerticalAlignment="Top" Margin="67,10,183,0" 
                 GotFocus="RadiusInput_GotFocus" LostFocus="RadiusInput_LostFocus"
                 Text="Enter radius" Foreground="Gray"/>
        <Button Content="Draw Circle" Width="100" Height="24" VerticalAlignment="Top" Margin="227,10,73,0" Click="DrawCircle_Click"/>
        <Canvas Name="CircleCanvas" Background="White" VerticalAlignment="Top" Margin="10,50,10,10"/>
    </Grid>
</Window>